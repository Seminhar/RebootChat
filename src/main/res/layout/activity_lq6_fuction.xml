<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x48"
        android:background="@color/title_black_tranc">

        <ImageView
            android:layout_width="@dimen/x18"
            android:layout_height="@dimen/x18"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x8"
            android:background="@drawable/ico_back"
            android:padding="@dimen/x3" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="管理中心"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x8" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/x6"
        android:weightSum="2">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="3">

            <LinearLayout
                android:id="@+id/fuc1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/cir_fuction"
                android:orientation="vertical"
                android:paddingLeft="@dimen/x12"
                android:paddingRight="@dimen/x12"
                android:paddingTop="@dimen/x48"
                android:paddingBottom="@dimen/x48"
                android:layout_margin="@dimen/x2"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/x38"
                    android:layout_height="@dimen/x38"
                    android:background="@drawable/fuc1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/x8"
                    android:gravity="center"
                    android:text="合同登记"
                    android:textColor="@color/main"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fuc3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/cir_fuction"
                android:orientation="vertical"
                android:paddingLeft="@dimen/x12"
                android:paddingRight="@dimen/x12"
                android:paddingTop="@dimen/x48"
                android:paddingBottom="@dimen/x48"
                android:layout_margin="@dimen/x2"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/x38"
                    android:layout_height="@dimen/x38"
                    android:background="@drawable/fuc4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/x8"
                    android:gravity="center"
                    android:text="试验检测"
                    android:textColor="@color/main"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fuc5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/cir_fuction"
                android:orientation="vertical"
                android:paddingLeft="@dimen/x12"
                android:paddingRight="@dimen/x12"
                android:paddingTop="@dimen/x48"
                android:paddingBottom="@dimen/x48"
                android:layout_margin="@dimen/x2"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/x38"
                    android:layout_height="@dimen/x38"
                    android:background="@drawable/fuc5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/x8"
                    android:gravity="center"
                    android:text="统计管理"
                    android:textColor="@color/main"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/fuc2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/cir_fuction"
                android:orientation="vertical"
                android:paddingLeft="@dimen/x12"
                android:paddingRight="@dimen/x12"
                android:paddingTop="@dimen/x48"
                android:paddingBottom="@dimen/x48"
                android:layout_margin="@dimen/x2"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/x38"
                    android:layout_height="@dimen/x38"
                    android:background="@drawable/fuc2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/x8"
                    android:gravity="center"
                    android:text="合同余额收款"
                    android:textColor="@color/main"
                    android:textSize="14sp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/fuc4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/cir_fuction"
                android:orientation="vertical"
                android:paddingLeft="@dimen/x12"
                android:paddingRight="@dimen/x12"
                android:paddingTop="@dimen/x48"
                android:paddingBottom="@dimen/x48"
                android:layout_margin="@dimen/x2"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/x38"
                    android:layout_height="@dimen/x38"
                    android:background="@drawable/fuc3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/x8"
                    android:gravity="center"
                    android:text="委托收样"
                    android:textColor="@color/main"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fuc6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/cir_fuction"
                android:orientation="vertical"
                android:paddingLeft="@dimen/x12"
                android:paddingRight="@dimen/x12"
                android:paddingTop="@dimen/x48"
                android:paddingBottom="@dimen/x48"
                android:layout_margin="@dimen/x2"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/x38"
                    android:layout_height="@dimen/x38"
                    android:background="@drawable/fuc6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/x8"
                    android:gravity="center"
                    android:text="人员管理"
                    android:textColor="@color/main"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
